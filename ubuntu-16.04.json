{
  "variables": {
    "iso_version": "16.04",
    "iso_revision": "3",
    "iso_type": "server",
    "iso_arch": "amd64",
    "iso_checksum": "a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600",
    "iso_checksum_type": "sha256",
    "iso_mirror": "http://releases.ubuntu.com",
    "hw_cpus": "1",
    "hw_memory": "512",
    "hw_disk_size": "40000",
    "headless": "false",
    "ssh_timeout": "60m",
    "compression_level": "6",
    "typo3_version": "8.7.8"
  },
  "builders": [{
    "type": "qemu",
    "machine_type": "q35",
    "format": "qcow2",
    "accelerator": "kvm",
    "qemuargs": [
      ["-m", "{{user `hw_memory`}}"],
      ["-smp", "{{user `hw_cpus`}}"]
    ],
    "disk_size": "{{user `hw_disk_size`}}",
    "output_directory": "./output/ubuntu-{{user `iso_version`}}-{{user `iso_arch`}}-{{build_type}}",
    "vm_name": "ubuntu-{{user `iso_version`}}-{{user `iso_arch`}}-{{build_type}}.qcow2",

    "iso_url": "{{user `iso_mirror`}}/{{user `iso_version`}}/ubuntu-{{user `iso_version`}}.{{user `iso_revision`}}-{{user `iso_type`}}-{{user `iso_arch`}}.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",

    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<enter><wait>",
      "<f6><esc>",
      "<home>",
      "<del><del><del><del><del><del><del><del>",
      "<del><del><del><del><del><del><del><del>",
      "<del><del><del><del><del><del><del><del>",
      "<del><del><del><del><del><del><del><del>",
      "<del><del><del><del><del><del>",
      "/install/vmlinuz ",
      "net.ifnames=0 ",
      "auto-install/enable=true ",
      "debconf/priority=critical ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-{{user `iso_version`}}-preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff"
  }],
  "provisioners": [{
    "type": "file",
    "source": "dist/typo3_src-{{user `typo3_version`}}.tar.gz",
    "destination": "/tmp/typo3_src-{{user `typo3_version`}}.tar.gz"
  },
  {
    "type": "file",
    "source": "files/TYPO3-8-lts-add-install-commands.patch",
    "destination": "/tmp/TYPO3-8-lts-add-install-commands.patch"
  },
  {
    "type": "file",
    "source": "files/apache2-typo3-site.conf",
    "destination": "/tmp/apache2-typo3-site.conf"
  },
  {
    "type": "shell",
    "environment_vars": [
        "TYPO3_VERSION={{user `typo3_version`}}"
    ],
    "scripts": [
      "scripts/ubuntu/apt.sh",
      "scripts/ubuntu/typo3.sh",
      "scripts/ubuntu/cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "output/ubuntu-{{user `iso_version`}}-{{user `iso_arch`}}-{{.Provider}}.box",
    "vagrantfile_template": "Vagrantfile.template"
  }]
}
